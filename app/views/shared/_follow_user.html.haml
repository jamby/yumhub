- unless current_user?(@user)
  - if current_user.following?(@user)
    = button_to "Unfollow", user_follow_path(@user.to_param, current_user.get_follow(@user).id), method: :delete, remote: true, class: "btn btn-inverse"
  - else
    = button_to "Follow", user_follows_path(@user.to_param), remote: true, class: "btn"
<h2>Sign in</h2>

<%= form_for(resource, as: resource_name, html: {id: 'login'}, url: session_path(resource_name)) do |f| %>
  <div><%= f.label :login %>
  <%= f.text_field :login, autofocus: true, placeholder: "Username or email" %></div>

  <br />

  <div><%= f.label :password %>
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? %>
    <%= f.label :remember_me, class: "checkbox" do %>
      <%= f.check_box :remember_me, style: "display:block" %> Remember me
    <% end %>
  <% end %>

  <div><%= f.submit "Sign in" %></div>
<% end %>

<%= render "devise/shared/links" %>
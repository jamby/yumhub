= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  %div
    = f.text_field :username, :autofocus => true, :placeholder => "Username", :class => "textfieldwidth"
  %div
    = f.email_field :email, :placeholder => "Email", :class => "textfieldwidth"
  %div
    = f.password_field :password, :placeholder => "Password", :class => "textfieldwidth"
  %div
    = f.password_field :password_confirmation, :placeholder => "Confirm password", :class => "textfieldwidth"
  .pull-right= f.submit "Sign up", :class => "btn btn-primary", style: "margin-right:20px;"
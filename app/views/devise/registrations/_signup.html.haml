= form_for(resource, as: resource_name, html: {id: 'signup'}, url: registration_path(resource_name)) do |f|
  %div
    = f.text_field :username, :autofocus => true, placeholder: "Username", class: "span12"
  %div
    = f.email_field :email, placeholder: "Email", class: "span12"
  %div
    = f.password_field :password, placeholder: "Password", class: "span12"
  %div
    = f.password_field :password_confirmation, placeholder: "Confirm password", class: "span12"
  .pull-right= f.submit "Sign up", class: "btn btn-primary"